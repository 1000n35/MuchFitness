<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>{% block title %}Hello World!{% endblock %}</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    {#
    <link rel="icon"
        href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    #}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    {% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
    {{ encore_entry_script_tags('app') }}
    {% endblock %}
    <style>
        body {
            background-color: lightgray;
        }

        header {
            background-color: #de5200;
            color: white;
            padding: 15px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        nav {
            display: flex;
            gap: 20px;
        }

        nav img {
            height: 50px;
        }

        nav a {
            color: white;
            text-decoration: none;
        }

        .dropdown2 {
            float: left;
            overflow: hidden;
        }

        .dropdown2 .dropbtn2 {
            font-size: 16px;
            border: none;
            outline: none;
            color: white;
            background-color: inherit;
            font-family: inherit;
            margin: 0;
        }

        .navbar a:hover,
        .dropdown2:hover .dropbtn2 {
            background-color: #de5200;
        }

        .dropdown2-content {
            display: none;
            position: absolute;
            background-color: #f9f9f9;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
            z-index: 1;
        }

        .dropdown2-content a {
            float: none;
            color: black;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
            text-align: left;
        }

        .dropdown2-content a:hover {
            background-color: #ddd;
        }

        .dropdown2:hover .dropdown2-content {
            display: block;
        }

        .fa-caret-down:before {
            content: "\f0d7"
        }

        .fa {
            display: inline-block;
            font: normal normal normal 14px/1 FontAwesome;
            font-size: inherit;
            text-rendering: auto;
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale
        }
    </style>
</head>

<body>
    <header>
        <nav>
            {% if app.user is null %}
            <a href="/">Accueil</a>
            <a href="/login">Connexion</a>
            {% else %}
            <a href="/">Accueil</a>
            <a href="/programme">Programmes</a>
            <a href="/exercice">Exercices</a>
            <a href="/contact">Nous contacter</a>
            <div class="dropdown2">
                <button class="dropbtn2">{{ app.user.username }}
                    <i class="fa fa-caret-down"></i>
                </button>
                <div class="dropdown2-content">
                    <a href="/user/{{ app.user.getId() }}">Mon profil</a>
                    {% if app.user.isCoach() %}
                    <a href="">Mes Programmes</a>
                    {% endif %}
                    <a href="">Programmes favoris</a>
                    <a href="{{ path('app_logout') }}">Se déconnecter</a>
                </div>
            </div>
            {% endif %}
        </nav>
    </header>
    {% block body %}
    {% endblock %}
</body>

</html>