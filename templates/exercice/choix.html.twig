                <td>{{ exercice.id }}</td>
                <td>{{ exercice.nomExercice }}</td>
                <td>{{ exercice.descriptif }}</td>
                <td>{{ exercice.video }}</td>
                <td>
                    {#<a href="{{ path('app_exercice_show', {'id': exercice.id}) }}">show</a>#}
                    <a href="{{ path('app_exercice_ajout', {'programmeid': programmeid, 'jour': jour, 'seancetypeid': seancetypeid, 'exerciceid': exercice.id}) }}">ajouter</a>
                </td>
        </tr>
        {% endif %}
        {% endfor %}

        {% for exercicePres in exercicePresents %}
        <tr>
                <td>{{ exercicePres.id }}</td>
                <td>{{ exercicePres.nomExercice }}</td>
                <td>{{ exercicePres.descriptif }}</td>
                <td>{{ exercicePres.video }}</td>
                {#<td>
                    <a href="{{ path('app_exercice_show', {'id': exercice.id}) }}">show</a>
                    <a href="{{ path('app_exercice_ajout', {'programmeid': programmeid, 'jour': jour, 'seancetypeid': seancetypeid, 'exerciceid': exercice.id}) }}">ajouter</a>
                </td>#}
        </tr>
        {% endfor %}

        <a href="{{ path('app_exercice_creer_exo', {'programmeid': programmeid, 'jour': jour, 'seancetypeid': seancetypeid}) }}">Créer un exercice pour ce programme</a>

        <a href="{{ path('app_seance_type_new', {'programmeid': programmeid, 'jour': jour}) }}">Finir la séance Type</a>

        </tbody>
    </table>
    {% endblock %}