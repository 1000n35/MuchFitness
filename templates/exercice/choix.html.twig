{% extends 'base.html.twig' %}

{% block title %}Choix création/utilisation existants{% endblock %}

{% block body %}

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NomExercice</th>
                <th>Descriptif</th>
                <th>Video</th>
                <th>actions</th>
